#!/bin/bash
# Workspace Sync Hook - tool-call
# 当AI调用工具前同步工作区状态

echo "=== Workspace Status ==="
echo "Time: $(date '+%Y-%m-%d %H:%M:%S')"

# 检查最近修改的文件
echo "=== Recent Files ==="
find /Users/yizhi/.openclaw/workspace -type f -mmin -60 2>/dev/null | head -5

# 检查运行中的进程
echo "=== Running Processes ==="
ps aux | grep -E "python|openclaw" | grep -v grep | head -3
